@{
    ViewBag.Title = "Index";
}

<div id="chartContainer">
   
</div>

<br/>

<div id="helpContainer">
    <br />
    <span>Enter URL, please</span>
</div>


<div id="inputContainer" class="form-inline">
    <input type="text"
           id="urlText"
           class="form-control"
           placeholder="http://example.com/"
           name="urlText"/>

    <input type="submit"
           class="btn btn-primary"
           onclick="measureResponseTime()"
           value="Run measuring"/>

    <span id="infoMessage">

        </span>
    <br>
    <br>
</div>
<div id="outerProgressContainer" class="progress">
    <div id="progressContainer"
         class="progress-bar progress-bar-striped active"
         role="progressbar"
         aria-valuenow="40"
         aria-valuemin="0"
         aria-valuemax="100"
         style="width: 0%">
        <span id="progressValueSpan">

        </span>
    </div>
</div>



<div class="col-lg-12">
    <div id="tableWebsiteContainer" class="col-lg-5">
        <h4>History</h4>
        <table id="resultWebsiteTable" class="table table-striped table-hover table-condensed"></table>
    </div>

    <div id="tableContainer" class="col-lg-7">
        <h4>Website result</h4>
        <table id="resultTable" class="table table-striped table-hover table-condensed"></table>
    </div>
</div>


<script>
    window.onload = function () {
        getWebsitesHistory();        
    };
</script>